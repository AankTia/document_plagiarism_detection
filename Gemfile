source 'https://rubygems.org'

gem 'rails', '4.2.6'
gem 'sass-rails'
gem 'uglifier'
gem 'coffee-rails'

gem 'pg'

# Web Server
gem 'thin'

# Translations
gem 'rails-i18n'

# Lock sprockets to 2 as angular rails only can use sprockets 2
gem 'sprockets', '~> 2'

gem 'eventmachine', '1.0.9.1'

group :development do
  gem 'annotate',require: false
  gem 'spring'
  gem 'quiet_assets'
  gem 'parallel_tests'
  gem 'better_errors'
  gem 'binding_of_caller'
end

group :test do
  gem 'timecop'
  gem 'pry'
  gem 'pry-byebug'
end

gem 'angular-rails-templates'